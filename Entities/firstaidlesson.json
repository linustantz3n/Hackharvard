{
  "name": "FirstAidLesson",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Lesson title"
    },
    "category": {
      "type": "string",
      "enum": [
        "cuts",
        "burns",
        "nosebleeds",
        "sprains",
        "fractures",
        "poisoning",
        "allergic_reactions",
        "choking",
        "breathing",
        "other"
      ],
      "description": "Type of first aid"
    },
    "severity": {
      "type": "string",
      "enum": [
        "minor",
        "moderate",
        "serious"
      ],
      "description": "Severity level"
    },
    "description": {
      "type": "string",
      "description": "Short description"
    },
    "steps": {
      "type": "array",
      "description": "Treatment steps",
      "items": {
        "type": "object",
        "properties": {
          "step_number": {
            "type": "number"
          },
          "instruction": {
            "type": "string"
          },
          "warning": {
            "type": "string"
          }
        }
      }
    },
    "when_to_call_911": {
      "type": "string",
      "description": "When to escalate to emergency services"
    }
  },
  "required": []
}